doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/style.css')
  body
    block content

    script(type='text/javascript', src='/js/vendor/jquery.js')
    script(type='text/javascript', src='/js/vendor/json2.js')
    script(type='text/javascript', src='/js/vendor/underscore.js')
    script(type='text/javascript', src='/js/vendor/backbone.js')
    script(type='text/javascript', src='/js/vendor/backbone.marionette.js')

    script(type='text/template', id='static-template').
        <div>
            <p>Template Estatico</p>
        </div>

    script(type='text/javascript').
        var EventManager = new Marionette.Application();

        EventManager.addRegions({
            mainRegion: "#main-region"
        });

        EventManager.StaticView = Marionette.ItemView.extend({
            template: '#static-template'
        });

        EventManager.on('start', function () {
            var staticView = new EventManager.StaticView();
            EventManager.mainRegion.show(staticView);
        })

        EventManager.start();
